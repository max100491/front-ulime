@import './base/fonts.styl'
@import './base/reset.styl'
@import './base/foundation.grid.styl'

@import './components/_colors.styl'
@import './components/_buttons.styl'

@import './partials/header.styl'
@import './partials/footer.styl'


.center
	text-align center
.right
	text-align right


body
	font-family 'GothamProRegular', sans-serif
	background-color #fff
	// min-width 1200px

#page
	width 100%
	height auto
	position relative
.row_c
	margin: 0 -0.6rem;
	max-width: none;
	width: auto;
.row_c_r
	margin: 0 -0.6rem 0 0;
	max-width: none;
	width: auto;
.row_c_l
	margin: 0 0 0 -0.6rem;
	max-width: none;
	width: auto;

.form-ord
	background-color #fcfcfb
	min-height 620px



.head-bar-info
	background-color fog
	padding-top 78px
	padding-bottom 36px
	position relative
	
	&__title
		font-family 'GothamProBold', sans-serif
		font-size 3.6em
		letter-spacing -.045em
		color almostBlack

.form-ord__title
	font-family 'GothamProBold', sans-serif
	font-size 1.4em
	text-transform uppercase
	letter-spacing -.025em
	color #88a256
	padding 46px 0 32px

.form-ord__ind-t
	font-size 1.8em
	padding 0 10px

.form-ord__el-form
	display inline-block
	padding 0
	margin 0
	font-size 1em
	line-height 1.1
	height 46px
	border 1px solid #c4c4c4
	border-radius 4px
	font-size 1.8em
	font-family 'GothamProMedium', sans-serif
	letter-spacing -.045em
	cursor pointer
	color almostBlack
	&:focus
	&:active
		outline none
	
.form-ord__el-form_select
	-webkit-appearance none
	-moz-appearance none
	appearance none
	background-image url(../img/arr-drpdw.png)
	background-position right center
	background-repeat no-repeat
	>option
		cursor pointer
		-webkit-appearance none
		-moz-appearance none
		appearance none
		display block
		padding 0
		margin 0
		border none
		font-size .9em

.form-ord__el-form_select_date
	width 330px
	padding-left 6px

.form-ord__el-form_select_time
	width 110px
	padding-left 10px

.form-ord__btn
	display inline-block
	text-decoration none
	width 260px
	font-size 1.6em
	font-family 'GothamProMedium', sans-serif
	padding 18px 0
	text-align center
	color #fff
	border-radius 6px
	border 1px solid juiceOrange
	background-color juiceOrange
	transition all ease .09s
	margin-bottom 78px
	margin-top 64px
	&:hover
		color juiceOrange
		background-color transparent

.form-ord__range_nest
	overflow hidden
.form-ord__range
	width 46px
	height 46px
	border 1px solid #c4c4c4
	border-radius 4px
	float left
	margin-right 16px
	text-align center
	font-size 1.8em
	font-family 'GothamProBold', sans-serif
	line-height @height
	-webkit-user-select none
	-moz-user-select none
	-ms-user-select none
	-o-user-select none
	user-select none
	
.form-ord__range_lt
.form-ord__range_gt
	color #C4C4C4
	cursor pointer
.form-ord__range_val
	background-color #f0f0f0
	border-color #f0f0f0

.form-ord__taks-nest
	overflow hidden
	position relative
	width 100%
.form-ord__taks-item
	width 33.3333333%
	height 102px
	display block
	float left
	border-top-width 1px
	border-bottom-width 1px
	border-left-width 1px
	border-right-width 1px
	border-style solid
	border-top-color fog
	border-bottom-color fog
	cursor pointer
	transition border-color ease .05s
	position relative
	padding-left 94px
	&:nth-child(2)
		border-left-color fog
		border-right-color transparent
		border-top-left-radius 4px
		border-bottom-left-radius 4px
	&:nth-child(4)
		border-left-color fog
		border-right-color fog
	&:nth-child(6)
		border-left-color transparent
		border-right-color fog
		border-top-right-radius 4px
		border-bottom-right-radius 4px

.form-ord__taks-item
	.form-ord__taks-ico
		width 82px
		height 82px
		left 12px
		top 8px
		position absolute
		background-size 100%
		background-repeat no-repeat
		&_1
			background-image url(../img/icon-prices-2.jpg)
		&_2
			background-image url(../img/icon-prices-1.jpg)
		&_3
			background-image url(../img/icon-prices-3.jpg)

.form-ord__radio-taks:checked + label
	border-color seriousBlue


.form-ord__taks-title
	font-family 'GothamProMedium', sans-serif
	font-size 1.6em
	letter-spacing -.025em
	line-height 2
	display inline-block
	padding-top 10px
	border-bottom 1px solid fog

.form-ord__taks-cost
	display block
	font-family 'GothamProBold', sans-serif
	font-size 3.6em
	line-height 1
	letter-spacing -.045em
	position relative
	padding-top 8px
	&_bl
		color almostBlack
	&_ble
		color seriousBlue
	&_or
		color juiceOrange
	&:after
		content 'руб \A /час'
		display inline-block
		position relative
		white-space pre
		font-size 0.38888888888888888888888888888889em
		font-family 'GothamProRegular'
		vertical-align top
		padding-top 4px
		padding-left 6px

.form-ord__add-nest
	overflow hidden
.form-ord__add-item
	float left
	margin 0 8px
	position relative
	width 84px
	cursor pointer
	&:nth-child(2)
		margin-left 0
	&:last-child
		margin-right 0

.form-ord__add-ico
	width 84px
	height @width
	display block
	position relative
	background-color #dddddd
	background-size 100%
	background-repeat no-repeat
	border-radius 4px
	transition background-color ease .04s
	for i in (0..6)
		&_{i}
			background-image url('../img/clean-stuff-'i'_a.png')
	&+*
		display block
		text-align center
		font-size 1.3em
		color #404040
		line-height 1.285714
		letter-spacing -.045em
		padding-top 16px


[id*="form-ord__add-item_checker_"]:checked + label .form-ord__add-ico
	background-color #88a256


.order-det-nest
	// padding-left 70px
	// overflow hidden
	// position fixed
	width 346px !important
	transform translateY(-92px)
	padding-left 80px
	// z-index 1001
.order-det-nest.unfixed
	position absolute
	top 146px
.order-det
	position relative	
	// height 400px
	background-color #fff
	border-radius 6px
	// border 1px solid rgba(#010101, .06)
	// z-index 1
	&:after
		content ''
		display block
		z-index -1
		position absolute
		width 80%
		height 90%
		left 50%
		top 50%
		transform translateX(-50%) translateY(-50%)
		box-shadow 0px 0px 64px 6px #C2C2C2

.order-det_top
	background-color #88a256
	font-family 'GothamProMedium'
	font-size 1.8em
	padding 24px 22px
	letter-spacing -.025em
	color almostWhite
	border-top-right-radius 4px
	border-top-left-radius 4px

.order-det_body
	padding 24px 26px
	overflow hidden
	border-bottom-width 1px
	border-left-width 1px
	border-right-width 1px
	border-color #E0E0E0
	border-style solid
	border-bottom-right-radius 4px
	border-bottom-left-radius 4px

.decor-nest
	overflow hidden
	font-size 1.4em
	line-height 1
	letter-spacing -.025em
	color almostBlack
	padding 10px 0
	border-top 1px solid #e2e2e1
	border-bottom 1px solid #e2e2e1
	margin 28px 0 12px

.order-time
	font-size 3.6em
	letter-spacing -.045em
.order-date
	font-family 'GothamProMedium', sans-serif
	font-size 1.6em
.order-day
	color almostBlack
	line-height 1.0625
.order-date-number
	color juiceOrange
	line-height 1.0625

.order-text-decor
	font-size 3.6em
	letter-spacing -.045em
	position relative
	&:after
		display inline-block
		position relative
		white-space pre
		font-size 0.388888888em
		font-family 'GothamProRegular'
		vertical-align top
		padding-top 2px
		padding-left 6px
		letter-spacing -.035em

.order-duration
	color seriousBlue
	&:after
		content 'часа'
.order-taks
	color seriousBlue
	&:after
		content 'руб \A /час'
.order-total
	color #88a256
	&:after
		content 'руб'

.order-additional-task
	font-size 1.4em
	line-height 1.28571428
	color #777
	margin-top 12px
	
	span
		padding 6px 0
		display inline-block
	li
		list-style-type none
		display block
		padding 2px 0 0 10px
		border-left 2px solid #D5D5D5

.order-det-promo
	position relative
	width 100%
	padding-top 38px
	
.order-form-group
	position relative
.order-form-group.valid
	input
		border-color seriousBlue
.order-form-group.nonvalid
	input
		border-color red

.order-input
	display block
	position relative
	width 100%
	border 1px solid #E6E6E6
	padding 0 12px
	margin 0
	font-family 'GothamProRegular'
	font-size 1.6em
	line-height 1
	height 46px
	background-color #fff
	letter-spacing -.045em
	border-radius 4px
	margin-bottom 20px
	&:focus
		border-color #ccc
		box-shadow inset 0 0 6px 0px #f7f7f7
		outline none !important
	&:valid
	&:focus
		+.order-label
			color #555
			transform translate3d(12px, -6px, 0)
			font-size 1.1em
	+.order-label
		display block
		position absolute
		font-family 'GothamProRegular'
		font-size 1.4em
		line-height 1
		top 0px
		left 0px
		transform translate3d(12px, 14px, 0)
		transition all ease .1s
		background-color #fff
		padding 2px
		letter-spacing -.045em
		color #bbb
		cursor text
		-webkit-user-select none
		-moz-user-select none
		-ms-user-select none
		-o-user-select none
		user-select none

.order-input_promo
	margin 0 !important

.order-select
	display block
	position relative
	-webkit-appearance none
	-moz-appearance none
	appearance none
	width 100%
	border 1px solid #E6E6E6
	padding 0 12px
	margin 0
	font-family 'GothamProRegular'
	font-size 1.6em
	line-height 1
	height 46px
	background-color #fff
	letter-spacing -.045em
	border-radius 4px
	margin-bottom 20px
	cursor pointer
	&:focus
		outline none


@import './base/responsive.styl'