@import './components/_colors.styl'
@import './components/_buttons.styl'

.center
	text-align center
.right
	text-align right


body
	font-family 'GothamProRegular', sans-serif
	background-color #fff
	// min-width 1200px

#page
	width 100%
	height auto
	position relative
.row_c
	margin: 0 -0.6rem;
	max-width: none;
	width: auto;
.row_c_r
	margin: 0 -0.6rem 0 0;
	max-width: none;
	width: auto;
.row_c_l
	margin: 0 0 0 -0.6rem;
	max-width: none;
	width: auto;

.form-ord
	background-color #fcfcfb
	min-height 620px

.head-bar-info
.head-bar
	background-color fog
	padding-top 78px
	padding-bottom 36px
	position relative
	
	&__title
		font-family 'GothamProBold', sans-serif
		font-size 3.6em
		letter-spacing -.045em
		color almostBlack

.head-bar
	padding 50px 0

.section-profile
	&__profile
		&-header
			padding 30px 0
			&-title
				font-size 36px
				font-weight bold
				padding 12px 20px 0 0
			&-pro-links,
			&-action-link
				font-size 16px
				text-align center
			&-pro-links
				padding 0 0 0 20px
			&-pro-link
				position relative
				padding 22px 30px
				border 1px #adadad solid
				color #adadad
				font-weight bold
		&-list
			padding 25px 0
			margin 40px 0
			background-color #fff
			&-wrapper
				padding 0 20px
		&-info
			padding 0 0 20px
			&-title
				display block
				font-family 'GothamProBold', sans-serif
				font-size 1.4em
				text-transform uppercase
				letter-spacing -.025em
				color #88a256
			&-details
				font-family 'GothamProMedium', sans-serif
				font-size 18px
				div
					padding 9px 0
				span
					font-family 'GothamPro', sans-serif
					
		&-summary
			padding 20px 0 0
		&-housekeeper-info
			font-size 1.4em
			font-weight bold
			&-title
				text-transform uppercase
				color black
				padding 0 0 5px
			&-name
				color #3472c7
				font-size 18px
				padding 5px 0 0
		&-price
			color #88a256
			font-size 36px
			padding 12px 40px 8px
			sup
				color #404040
				font-size 14px
				top -1.1em
		&-indicator
			width 180px
			color white
			font-size 16px
			text-align center
			padding 18px 0
			border-radius 4px
.pro-link-active
	margin 0 -1px 0 0
	background-color #fff
	border-color #3472c7
	color #000
	
.pro-link-unactive
	border-left 0
	color #787878
